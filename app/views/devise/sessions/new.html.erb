<div class="card shadow mb-4">
  <div class="card-header hero-color3 text-white">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mt-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" ", class:"form-control" %>
        <%= f.label :email, for:"email", class:"form-label" %><br />
      </div>
      <div class="form-floating mt-2">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:" ", class:"form-control" %>
        <%= f.label :password, for:"password", class:"form-label" %><br />
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-check form-switch mb-4">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>
      <div class="actions mb-2">
        <%= f.submit "Log in", class:"success-btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>