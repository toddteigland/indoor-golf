<div class="mb-3">
  <%=  form_for @score, data: {turbo: false} do |f| %>
    <div class="form-floating mt-2">
      <%= f.collection_select :round_id, Round.all, :id, :course, {prompt: 'Select a round'}, {class: 'form-select'}  %>
      <%= f.label :course, class:"form-label" %>
    </div>
    <div class="form-floating mt-2">
      <%= f.number_field :score, placeholder: " ", class:"form-control" %>
      <%= f.label :score, class:"form-label", for:"score" %>
    </div>
    <div class="form-floating mt-2">
      <%= f.date_field :date_played, class:"form-control", placeholder: " " %>
      <%= f.label :date_played, class:"form-label", for:'date_played' %>
    </div>
    <div class="mt-4">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>