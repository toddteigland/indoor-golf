<p style="color: green"><%= notice %></p>
<div class="card shadow border-success">
  <div class="card-header d-flex justify-content-center bg-success-subtle">
    <h3>New Score entry page</h3>
  </div>
  <div class="card-body">
    <% if @score.errors.any? %>
      <div style="color: red;">
        <h4><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h4>
        <ul>
          <% @score.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-2">
      <%= render 'score_form' %>
    </div>
    <%= button_to 'Return home', root_path, method: :get, class:"btn btn-primary" %>
  </div>
</div>
